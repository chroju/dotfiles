[user]
  name = chroju
  email = chroju@users.noreply.github.com
  signingkey = 3B0798D512C9BA43

[github]
  user = chroju

[color]
  status = auto
  diff = auto
  branch = auto
  grep = auto

[init]
  templatedir = ~/.gittemplates
  defaultBranch = main

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore
  editor = vim
  attributesfile = ~/.gitattributes

[commit]
  template = ~/.gitmessage
  gpgsign = true

[diff]
  renames = copies

[diff "ansible-vault"]
  textconv = ansible-vault view
  cachetextconv = true

[alias]
  # shorter commands
  a  = add
  aa = add --all
  cm = commit
  d  = diff
  ps = push
  pso = push origin
  s  = status -s
  sb = status -s --branch
  ss = status
  sh = show

  # branch
  create-branch = checkout -b
  delete-branch = branch -d
  delete-push = push --delete
  delete-stage = rm --cached

  # undo
  undo-merge = merge --abort
  undo-stage = reset -q HEAD --
  undo-all = !git reset -q --hard HEAD -- && git clean -d -f
  overwrite-commit = commit --amend

  # show all
  branches = branch -a
  tags = tag
  stashes = stash list
  remotes = remote -v

  # rename commands
  graph = log --graph --oneline --decorate --name-status

[ghq]
  root = ~/repos/src

[gpg]
	program = /usr/local/bin/gpg

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
