" copy.js
javascript <<EOM
(function () {
  liberator.globalVariables.copy_templates = [
    { label: 'titleAndURL',    value: '%TITLE%\n%URL%' },
    { label: 'markdown',       value: '[%TITLE%](%URL%)' },
    { label: 'title',          value: '%TITLE%', map: ',y' },
    { label: 'anchor',         value: '<a href="%URL%">%TITLE%</a>' },
    { label: 'selanchor',      value: '<a href="%URL%" title="%TITLE%">%SEL%</a>' },

    { label: 'amazon',   value: 'copy clean amazon url from current page',
      custom: function() {
        var m = content.document.location.pathname.match(/dp\/(\d+)/);
        return m ? ('http://amazon.jp/dp/' + m[1]) : null;
      }
    },
  ];
})();
EOM
" 特によく使う機能をキーマッピング
map ,y :copy<Space>titleAndURL<CR>
map ,my :copy<Space>markdown<CR>


"============================
" about:config
"============================
" IPv6
set! network.dns.disableIPv6=true
" pipeline関連設定
set! network.http.pipelining=false
set! network.http.proxy.pipelining=false
set! network.http.pipelining.maxrequests=8
" 最後のタブを閉じてもウインドウを閉じない
set! browser.tabs.closeWindowWithLastTab=false
" cacheの保存容量
set! browser.cache.memory.capacity=65536
" セッション保存間隔（頻繁だと動画読み込みに支障アリ？）
set! browser.sessionstore.interval=300000
" ポップアップブロック数の調整
set! dom.popup_maximum=50
" cache保存無効化
set! browser.cache.disk.enable=false
" RAMキャッシュ容量設定
set! browser.cache.memory.capacity=233016
" スペルチェック無効化
set! layout.spellcheckDefault=0
" アドオンインストル時の待ち時間をなくす
set! security.dialog_enable_delay=0


"読み込み完了メッセージ
echo "vimperatorrc loaded."

" [EOF]

